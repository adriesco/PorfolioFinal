---
import Projects from '../components/Projects.astro';
import Contact from '../components/Contact.astro';
import AboutMe from '../components/AboutMe.astro';
import 'tailwindcss/tailwind.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio</title>
  </head>

  <body class="bg-blue-950 text-white min-h-screen" id="body">
    <nav class="flex justify-center items-center p-6">
      <div class="flex space-x-9">
        <a href="/" class="text-gray-400 hover:text-teal-400">Home</a>
        <a href="#projects" class="text-gray-400 hover:text-teal-400">Projects</a>
        <a href="#contact" class="text-gray-400 hover:text-teal-400">Contact</a>
        <a href="#aboutme" class="text-gray-400 hover:text-teal-400">About me</a>
      </div>
    </nav>

    <section class="flex flex-col justify-center items-center text-center py-20">
      <div class="bg-teal-500 p-1 rounded-full mb-8">
        <img src="fotomia.jpg" alt="foto" class="rounded-full border-4 border-teal-500 w-32 h-32" />
      </div>

      <h1 class="text-4xl font-bold">Hola soy</h1>
      <h2 class="text-5xl font-bold mt-2 text-teal-400">Adri√°n Escolar</h2>
      <p class="text-2xl mt-4">
        Y soy un <span class="text-teal-400">Estudiante de 2DAM</span>
      </p>
      <a
        href="CV (1) (1).pdf"
        download=""
        class="mt-8 inline-block px-11 py-3 bg-teal-500 text-lg font-bold rounded-full hover:bg-teal-600"
      >
        Descargar CV
      </a>
    </section>

    <section id="projects">
      <Projects />
    </section>

    <section id="contact">
      <Contact />
    </section>

    <section id="aboutme">
      <AboutMe />
    </section>
    
  </body>
</html>
